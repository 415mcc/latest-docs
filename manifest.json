{
  "manifest_version": 2,
  "name": "latest-docs",
  "version": "0.1",

  "description": "Chrome extension to redirect to specific documentation versions.",

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png",
    "500": "images/icon500.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_popup": "popup.html"
  },

  "author": "lachlan@lachm.com",

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "*://docs.python.org/*",
    "*://docs.oracle.com/javase/*"
  ]
}
